/dts-v1/;
/include/ "zynq-7000.dtsi"

/ {
	model = "Vitronic Zynq Board";
	compatible = "xlnx,zynq-7000";

	aliases {
		ethernet0 = &gem0;
		ethernet1 = &gem1;
		serial0 = &uart0;
		serial1 = &uart1;
		spi0 = &qspi;
	};

	memory@0{
		device_type = "memory";
		reg = <0x0 0x40000000>;
	};

	chosen {
		bootargs = "console=ttyPS1,115200 root=/dev/mmcblk0p2 rw earlyprintk rootfstype=ext4 rootwait devtmpfs.mount=0 mem=512M";
		/*bootargs = "console=ttyPS1,115200 root=/dev/ram rw earlyprintk mem=512M";*/
		linux,stdout-path = "/amba/serial@e0001000";
	};	
	
	cpus {
		cpu@0 {
			operating-points = <
				/* kHz    uV */
				866666  1000000
				783333  1000000
				666667  1000000
				333334  1000000
			>;
		};
	};

	amba{
		ViAXI2PL: ViAXI2PL@40000000 {
			reg = < 0x40000000 0x00400000 >;
		};   
		
		ViDMA_0: ViDMA_0@60000000 {
			reg = < 0x60000000 0x00004000 >;
		}; 
		
		
		ViDMA_1: ViDMA_1@70000000 {
			reg = < 0x70000000 0x00004000 >;
		}; 
		
		ViINTC: ViINTC@60010000 {
			interrupt-parent = <&intc>;
			interrupts = <0x0 52 0x4>;
			reg = < 0x60010000 0x00001000 >;
		};
    };
};

&qspi {
	status = "okay";
	is-dual = <0>;
	num-cs = <1>;
	xlnx,fb-clk = <0x1>;
	xlnx,qspi-mode = <0x0>;
	flash@0 {
		compatible = "s25fl256s1";
		reg = <0x0>;
		spi-tx-bus-width = <1>;
		spi-rx-bus-width = <4>;
		spi-max-frequency = <50000000>;
		#address-cells = <1>;
		#size-cells = <1>;
			
        partition@qspi-fsbl-bitstream-uboot {
            label = "qspi-fsbl-bitstream-uboot";
            reg = <0x0 0x800000>;
         };
        
        partition@qspi-user {
            label = "qspi-user";
            reg = <0x800000 0x1800000>;
        };
    };
};

&sdhci1 {
	status = "okay";
};

&uart0 {
    status = "okay";
};

&uart1 {
    status = "okay";
};

&watchdog0 {
    reset = <1>;
    timeout-sec = <120>;
};

&gem0 {
	status = "okay";
	phy-mode = "rgmii-id";
	phy-handle = <&phy0>;
	phy0: phy@0 {
        compatible = "marvell,88e1510";
        device_type = "ethernet-phy";
        reg = <0>;
        marvell,reg-init = <3 16 0xf000 0x825 3 17 0xfff0 0x0a>;
    };
    phy1: phy@1 {
        compatible = "marvell,88e1510";
        device_type = "ethernet-phy";
        reg = <1>;
        marvell,reg-init = <3 16 0xf000 0x825 3 17 0xfff0 0x0a>;
    };
};

&gem1 {
	status = "okay";
	phy-mode = "rgmii-id";
	phy-handle = <&phy1>;
};

&usb1 {
	status = "okay";
	dr_mode = "host";
	phy_type = "ulpi";
	usb-reset = <&gpio0 7 0>;
};

&can0 {
	status = "okay";
};

&i2c0 {
	status = "okay";
	clock-frequency = <400000>;
	
    rtc@68 {
        compatible = "bq32000";
        reg = <0x68>;
    };

    imu6050@69 {
        compatible = "invensense,mpu6050";
        reg = <0x69>;
        //invensense,int_config = <0x0>;
        //invensense,level_shifter = <0>;
        //invensense,orientation = [01 00 00 00 01 00 00 00 01];
        //invensense,sec_slave_type = <0>;
        //invensense,key = [4e cc 7e eb f6 1e 35 22 00 34 0d 65 32 e9 94 89];
        interrupts = <0 36 1>;
    };
};

&spi1 {
	status = "okay";
    interrupts = < 0 49 1 >;
    num-chip-select = <4>;
    reg = < 0xe0007000 0x1000 >;
    speed-hz = <100000000>;		    
    
    lm70@0{
        compatible = "national,lm70";
        reg =<0>;  
        spi-max-frequency= <1000000>;
    };
};

